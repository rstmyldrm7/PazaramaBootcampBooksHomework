@model  List<Category>
<div class="list-group">
    <a href="/Book/List" class="list-group-item list-group-item-action @(ViewBag.SelectedGenre==null?"active":"")">Tüm Kategoriler</a>
    @foreach(var category in Model)
            {
                <a href="/Book/List/@category.CategoryId" class="list-group-item list-group-item-action @(ViewBag.SelectedGenre==category.CategoryId.ToString()?"active":"")">
                    @category.Name
                </a>
            }
</div>